<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background">

    <Button
        android:id="@+id/btn_save_task"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:enabled="false"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/green1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_new_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@android:color/transparent"
        android:hint="New task"
        android:paddingVertical="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_save_task"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_save_task" />


    <LinearLayout
        android:id="@+id/layout_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:paddingBottom="15dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_new_task">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_due_date_task"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Due date"
            android:textAllCaps="false"
            android:textColor="@color/green3"
            android:textSize="16sp"
            app:iconSize="16dp"
            app:icon="@drawable/ic_calendar"
            app:iconTint="@color/green2" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_due_date"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:text="Today"
            android:textColor="@color/white"
            android:visibility="gone"
            app:chipBackgroundColor="@color/black"
            app:closeIconTint="@color/white"
            app:iconStartPadding="8dp"
            app:chipIcon="@drawable/ic_calendar"
            app:chipIconSize="16dp"
            app:chipIconTint="@color/white"
            app:chipStrokeColor="@color/cardview_dark_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notification_add_task"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Inactive"
            android:textAllCaps="false"
            android:textColor="@color/green3"
            android:textSize="16sp"
            app:icon="@drawable/ic_notifications_off"
            app:iconSize="20dp"
            app:iconTint="@color/green2"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_notification"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:checkable="false"
            android:text="Active"
            android:textColor="@color/white"
            android:visibility="gone"
            app:chipBackgroundColor="@color/black"
            app:closeIconTint="@color/white"
            app:iconStartPadding="8dp"
            app:chipIcon="@drawable/ic_notifications_active"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/white"
            app:chipStrokeColor="@color/cardview_dark_background" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>