<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EtudeTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:statusBarColor">@color/grey_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_800</item>
        <item name="colorSecondaryVariant">@color/grey_700</item>
        <item name="colorOnSecondary">@color/grey_200</item>

        <!-- Text colors-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_400</item>
        <item name="android:textColorTertiary">@color/grey_700</item>

        <item name="colorSurface">@color/grey_900</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="shadowColor">@color/grey_900</item>

        <item name="preferenceTheme">@style/Theme.EtudeTask.PreferenceTheme</item>

    </style>

    <style name="Theme.EtudeTask.PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_preference</item>
    </style>
</resources>