<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EtudeTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_button</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/subject_red</item>
        <item name="colorPrimaryDark">@color/gray2</item>
        <item name="colorAccent">@color/blue_button</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_600</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/subject_green</item>
        <!-- Customize your theme here. -->
        <item name="backgroundTint">@color/gray_42</item>
        <item name="backgroundColor">@color/gray_42</item>
        <item name="shadowColor">@color/gray2</item>

        <item name="android:textColorPrimary">@color/white</item>

        <item name="colorOnSurface">@color/gray1</item>

        <item name="preferenceTheme">@style/Theme.EtudeTask.PreferenceTheme</item>

    </style>

    <style name="Theme.EtudeTask.PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_preference</item>
    </style>
</resources>